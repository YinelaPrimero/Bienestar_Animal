  usecase "Registrar Salida\nde Insumos" as UC9
  usecase "Consultar Stock\nActual" as UC10
  usecase "Configurar Alertas\nde Stock Bajo" as UC11
  usecase "Generar Orden\nde Compra" as UC12

  usecase "Configurar Tipos\nde Vacuna" as UC13
  usecase "Configurar Productos\nFarmacéuticos" as UC14
  usecase "Configurar Especies\ny Razas" as UC15

  usecase "Generar Reporte\nde Animales" as UC16
  usecase "Generar Reporte\nde Adopciones" as UC17
