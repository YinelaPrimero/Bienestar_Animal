  usecase "Generar Reporte\nde Consultas Veterinarias" as UC19
  usecase "Generar Reporte\nde Vacunación" as UC20
  usecase "Generar Reporte\nde Inventarios" as UC21

  usecase "Consultar Dashboard\nEjecutivo" as UC22
  usecase "Visualizar Indicadores\nClave" as UC23
  usecase "Exportar Datos\na Excel" as UC24
  usecase "Programar Reportes\nAutomáticos" as UC25

